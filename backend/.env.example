# Backend environment variables (example)

# App
DEBUG=False
SECRET_KEY=change-me-to-a-long-random-string

# Database (docker-compose: use host "postgres"; local: use "localhost")
DATABASE_URL=postgresql+asyncpg://admin:admin@postgres:5432/dashboard
# Sync URL for Alembic migrations (use localhost when running alembic from host)
SYNC_DATABASE_URL=postgresql://admin:admin@localhost:5432/dashboard

# Redis (docker-compose)
REDIS_URL=redis://redis:6379
REDIS_CACHE_TTL=3600

# AWS S3
AWS_REGION=us-east-1
S3_BUCKET_NAME=mi-pmo-dnd
